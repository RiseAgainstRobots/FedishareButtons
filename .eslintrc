{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "linebreak-style": [2, "unix"],
    "quotes": [1, "single", {"allowTemplateLiterals": true}],
    "no-console": 1,
    "semi": [2, "always"],
    "camelcase": [1, { "properties": "always" }],
    "no-cond-assign": [2, "except-parens"]
  }
}
